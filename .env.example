# OpenAI API 키 (공통)
OPENAI_API_KEY=your_openai_api_key_here

# 모델 설정 (선택사항, 기본값: gpt-4o-mini)
MODEL=gpt-4o-mini

# 텔레그램 봇 토큰 (크메르어)
TELEGRAM_BOT_TOKEN_KHMER=your_khmer_bot_token_here

# 텔레그램 봇 토큰 (베트남어)
TELEGRAM_BOT_TOKEN_VIETNAM=your_vietnam_bot_token_here

# 텔레그램 모드 (polling 또는 webhook)
TELEGRAM_MODE=polling

# 프록시 URL (선택사항)
TELEGRAM_PROXY_URL=

# Webhook 설정 (webhook 모드일 때만 사용)
WEBHOOK_PUBLIC_URL_KHMER=https://your-domain.com
WEBHOOK_PUBLIC_URL_VIETNAM=https://your-domain.com

# SSL 인증서 경로 (webhook 모드일 때)
SSL_CERT_PATH=/etc/letsencrypt
WEBHOOK_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
WEBHOOK_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# 허용 채팅 ID (선택사항, JSON 배열 형식)
ALLOWED_CHAT_IDS_KHMER=[]
ALLOWED_CHAT_IDS_VIETNAM=[]
